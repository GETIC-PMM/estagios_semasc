<%- model_class=Estagiario -%>

<% remote ||=remote %>

<% if can? :edit, estagiario %>
    <%= link_to edit_admin_estagiario_path(estagiario), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <% end %>
<% end %>

<% if can? :destroy, estagiario %>
    <%= button_to admin_estagiario_path(estagiario), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <% end %>
<% end %>

<% if can? :new, Estagiario %>
    <%= link_to new_admin_estagiario_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <% end %>
<% end %>