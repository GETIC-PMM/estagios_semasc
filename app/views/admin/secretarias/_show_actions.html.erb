<%- model_class=Secretaria -%>

<% remote ||= remote %>


<% if can? :edit, secretaria %>
    <%= link_to edit_admin_secretaria_path(secretaria), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <% end %>
<% end %>

<% if can? :destroy, secretaria %>
    <%= button_to admin_secretaria_path(secretaria), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <% end %>
<% end %>

<% if can? :new, Secretaria %>
    <%= link_to new_admin_secretaria_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <% end %>
<% end %>