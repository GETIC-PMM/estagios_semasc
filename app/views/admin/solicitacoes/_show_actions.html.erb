<%- model_class=Solicitacao -%>

<% remote ||= remote %>


<% if can? :edit, solicitacao %>
    <%= link_to edit_admin_solicitacao_path(solicitacao), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <% end %>
<% end %>

<% if can? :destroy, solicitacao %>
    <%= button_to admin_solicitacao_path(solicitacao), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <% end %>
<% end %>

<% if can? :new, Solicitacao %>
    <%= link_to new_admin_solicitacao_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <% end %>
<% end %>